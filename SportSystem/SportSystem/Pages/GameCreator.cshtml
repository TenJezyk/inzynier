@page "/GameCreator"
@using SportSystem.Data.Models;
@model SportSystem.Pages.GameCreatorModel
@{
    ViewData["Title"] = "Create a New Game";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Game Creator</h2>

    <form method="post" class="game-form">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="HostTeam.Name" class="control-label">Host Team</label>
            <input asp-for="HostTeam.Name" class="form-control" placeholder="Enter host team name" />
            <span asp-validation-for="HostTeam.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="VisitTeam.Name" class="control-label">Visiting Team</label>
            <input asp-for="VisitTeam.Name" class="form-control" placeholder="Enter visiting team name" />
            <span asp-validation-for="VisitTeam.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Locationselected.Id" class="control-label">Location</label>
            <select asp-for="Locationselected.Id" asp-items="@(new SelectList(Model.AvailableLocations, "Id", "Street"))" class="form-control">
                <option value="">Select location</option>
            </select>
            <span asp-validation-for="Locationselected.Id" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GameDate" class="control-label">Game Date</label>
            <input asp-for="GameDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="GameDate" class="text-danger"></span>
        </div>

        <div class="form-group text-center mt-3">
            <button type="submit" class="btn btn-primary" id="gamecr">Create Game</button>
        </div>
    </form>


    
</div>

<style>
    body {
        background-color: #f0f8ff; 
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .game-form {
        background-color: #ffffff; 
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
    }

    h2 {
        color: #4169e1; 
    }

    label {
        color: #555; 
    }

    .btn-primary {
        background-color: #4682b4; 
        border-color: #4682b4; 
    }

        .btn-primary:hover {
            background-color: #5f9ea0; 
            border-color: #5f9ea0; 
        }
</style>
